<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_quiz"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:background="#0553A1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/backbutton"
            app:tint="@color/white"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/exit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/quiz_time"
        android:indeterminate="false"
        app:trackThickness="5dp"
        app:trackCornerRadius="5dp"
        android:max="20"
        android:progress="20"
        android:layout_height="@dimen/_4sdp"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:layout_width="match_parent"
        app:trackColor="@color/primary_quiz"
        app:indicatorColor="#ffc107"/>




    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_ques1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:onClick="OptionA_click"
        app:cardCornerRadius="@dimen/_5sdp"
        android:id="@+id/card1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option_a"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_gravity="center" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="OptionB_click"
        app:cardCornerRadius="@dimen/_5sdp"
        android:id="@+id/card2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option_b"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="OptionC_click"
        app:cardCornerRadius="@dimen/_5sdp"
        android:id="@+id/card3"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option_c"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_gravity="center" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="OptionD_click"
        app:cardCornerRadius="@dimen/_5sdp"
        android:id="@+id/card4"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option_d"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_gravity="center" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:background="@drawable/next_btn"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_35sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_25sdp"
            />

    </LinearLayout>

</LinearLayout>